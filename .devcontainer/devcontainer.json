{
  "name": "Laravel 12 (PHP 8.3) Development",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/php:1": {
      "version": "8.3",
      "installComposer": true,
      "extensions": [
        "pdo_mysql",
        "bcmath",
        "ctype",
        "fileinfo",
        "json",
        "mbstring",
        "openssl",
        "tokenizer",
        "xml",
        "zip"
      ]
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "ms-vscode.live-server",
        "bradlc.vscode-tailwindcss",
        "Vue.volar"  // âœ… Prefer this for Vue 3
      ]
    }
  },
  "postCreateCommand": "composer global require laravel/installer && [ -f composer.json ] && composer install || true && [ -f package.json ] && npm install || true && php artisan key:generate || true && php artisan migrate --seed --force || true",
  "forwardPorts": [8000, 5173],
  "remoteUser": "vscode"
}
