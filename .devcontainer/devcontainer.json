{
  "name": "Laravel 12 (PHP 8.3) Development",
  "image": "ghcr.io/devcontainers/images/features/php:8.3",
  "features": {
    "ghcr.io/devcontainers/features/php:1": {
      "version": "8.3",
      "installComposer": true,
      "extensions": [
        "pdo_mysql",
        "bcmath",
        "ctype",
        "fileinfo",
        "json",
        "mbstring",
        "openssl",
        "tokenizer",
        "xml",
        "zip"
      ]
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "ms-vscode.live-server",
        "bradlc.vscode-tailwindcss",
        "Vue.volar"
      ]
    }
  },
  "postCreateCommand": "if [ -f composer.json ]; then composer install; fi && if [ -f package.json ]; then npm install; fi && if [ -f artisan ]; then php artisan key:generate || true && php artisan migrate --seed --force || true; fi",
  "forwardPorts": [8000, 5173],
  "remoteUser": "vscode"
}
